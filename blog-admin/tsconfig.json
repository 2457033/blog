{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* 引入 */
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },

    /* 全局组件类型 */
    "types": ["element-plus/global", "./wangeditor.d.ts"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "auto-imports.d.ts",
    "components.d.ts",
    "shims-vue.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
